<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.catalin.weatherb.Weather.home_page"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello,"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="user"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.36"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/button"
        android:onClick="openProfile"
        android:typeface="normal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favourite Links"
        android:id="@+id/button2"
        android:onClick="openFavouriteLinks" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:id="@+id/button3"
        android:onClick="openWeather" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenis Players"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="openPlayers" />

</LinearLayout>
